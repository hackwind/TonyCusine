<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="@color/cardview_color"
    android:layout_gravity="center_horizontal"
    android:stateListAnimator="@animator/touch_raise"
    >
    <ImageView
        android:id="@+id/sub_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/default_image"
        android:transitionName="transitionImg"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/sub_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_title_height"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@color/main_title_normal"
        android:gravity="center"
        android:layout_gravity="bottom|center_horizontal"/>
</android.support.v7.widget.CardView>
